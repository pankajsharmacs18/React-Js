------------------------------------------------------------------------------------
App.jsx Fine (Componenat)
import React, { useState } from 'react';

const App=()=>
{

const [value,setCount]=useState(0);
const INcNum=()=>
{
    setCount(value+1);
};
return (

    <>
        <h1>{value}</h1>
        <button onClick={INcNum}>Click ME</button>
    </>
)
}
    

export default App;

